<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
        
        tr:nth-child(even) {
          background-color: #dddddd;
        }
        </style>
</head>
<body>
    <h1>My Employee</h1>
    <!-- add -->
    <a href="/employees/add">
        <button>Add Employee</button>
    </a>

    <!-- profile_picture, name, age, position, education, email, phone_number. -->
    sort By:
    <a href="/?name=name">
      <button>name</button>
    </a>
    <a href="/?position=position">
      <button>position</button>
    </a>

    <form action="" method="get">
      <select name="degree">
        <option value="">Filter by Degree</option>
        <option value="Bachelor Degree">Bachelor Degree</option>
        <option value="Master Degree">Master Degree</option>
      </select>
      <button type="submit">Filter</button>
    </form>
    <table>
        <tr>
          <th>profile_picture</th>
          <th>name</th>
          <th>age</th>
          <th>position</th>
          <th>education</th>
          <th>email</th>
          <th>phone_number</th>
          <th>action</th>
        </tr>
        <% data.forEach(el => { %>
            <tr>
                <td>
                    <img src="<%= el.profile_picture %>" alt="" style="width: 100px;">
                </td>
                <td><%= el.name %></td>
                <td><%= el.age %></td>
                <td><%= el.position %></td>
                <td><%= el.education %></td>
                <td><%= el.email %></td>
                <td><%= el.phone_number %></td>
                <td>
                  <a href="/employees/edit/<%= el.id %>">
                    <button>Edit</button>
                  </a>
                  <a href="/employees/delete/<%= el.id %>">
                    <button>Delete</button>
                  </a>
                </td>
              </tr>
        <% }) %>
    </table>
</body>
</html>