<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
        
        tr:nth-child(even) {
          background-color: #dddddd;
        }
        </style>
</head>
<body>
    <h1><%= data.name %></h1>
    <p>Code : <span><%= data.code %></span></p>
    <a href="/incubators/<%= data.id %>/startUp/add">
        <button>Add</button>
    </a>

    <% if (name || founder) { %>
      <h1 style="color: red;">Start-Up <%= name %> with <%= founder %> as founder has been removed</h1>
    <% } %>
    <table>
        <tr>
          <th>start up name</th>
          <th>founder name</th>
          <th>age</th>
          <th>education</th>
          <th>role of founder</th>
          <th>valuation</th>
          <th>action</th>
        </tr>
        <% data.Startups.forEach(el => { %>
            <tr>
                <td><%= el.startUpName %></td>
                <td><%= el.founderName %></td>
                <td><%= el.age %></td>
                <td><%= el.educationOfFounder %></td>
                <td><%= el.roleOfFounder %></td>
                <td><%= el.formatValuation %></td>
                <td>
                    <!-- bisa kayal gini cuy! -->
                    <a href="/incubator/<%= data.id %>/startup/<%= el.id %>/edit">
                        <button>edit</button>
                    </a>
                    <a href="/incubator/<%= data.id %>/startup/<%= el.id %>/delete">
                        <button>delete</button>
                    </a>
                </td>
            </tr>
        <% }) %>
      </table>
    <h1>valuation: <%= valuation %></h1>

    <a href="/">
      <button>back</button>
    </a>
</body>
</html>