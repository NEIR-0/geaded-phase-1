<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>

    <style>
        p{
            color: red;
        }
    </style>
</head>
<body>
    <!-- navbar -->
    <%- include('navbar') %>

    <h1><%= title %></h1>
    <form action="/posts/<%=data.id%>/edit" method="post">
        <table>
            <!-- title -->
            <tr>
                <td>
                    <label for="title">Title</label>
                    <input type="text" name="title" value="<%= data.title %>" placeholder="<%= data.title %>">
                    <% if (title !== "undefined") { %>
                        <p><%= title %></p>
                    <% } %>
                </td>
            </tr>

            <!-- author/difficulty -->
            <tr>
                <td>
                    <label for="Author">Author</label>
                    <select name="authorId">
                        <% author.forEach(el => { %>
                            <option value="<%= el.id %>" <%= data.authorName === el.fullName ? "selected" : "" %>><%= el.fullName %></option>
                        <% }) %>
                    </select>
                    <% if (authorId !== "undefined") { %>
                        <p><%= authorId %></p>
                    <% } %>
                </td>
                <td>
                    <label for="difficulty">difficulty</label>
                    <select name="difficulty">
                        <option value="Easy" <%= data.difficulty === "Easy" ? "selected" : "" %>>Easy</option>
                        <option value="Medium" <%= data.difficulty === "Medium" ? "selected" : "" %>>Medium</option>
                        <option value="Hard" <%= data.difficulty === "Hard" ? "selected" : "" %>>Hard</option>
                    </select>
                    <% if (difficulty !== "undefined") { %>
                        <p><%= difficulty %></p>
                    <% } %>
                </td>
            </tr>

            <!-- minute -->
            <tr>
                <td>
                    <label for="estimatedTime">Estimated Time</label>
                    <input type="number" name="estimatedTime" value="<%= data.estimatedTime %>" placeholder="<%= data.estimatedTime %>">
                    <% if (estimatedTime !== "undefined") { %>
                        <p><%= estimatedTime %></p>
                    <% } %>
                </td>
                <td>
                    <h3>Minutes</h3>
                </td>
            </tr>

            <!-- image -->
            <tr>
                <td>
                    <label for="imageUrl">imageUrl</label>
                    <input type="text" name="imageUrl" value="<%= data.imageUrl %>" placeholder="<%= data.imageUrl %>">
                    <% if (imageUrl !== "undefined") { %>
                        <p><%= imageUrl %></p>
                    <% } %>
                </td>
            </tr>

            <!-- createdDate -->
            <tr>
                <td>
                    <label for="createdDate">createdDate</label>
                    <input type="date" name="createdDate" value="<%= data.formatCreatedDate %>">
                    <% if (createdDate !== "undefined") { %>
                        <p><%= createdDate %></p>
                    <% } %>
                </td>
            </tr>
        </table>

        <!-- description -->
        <div class="">
            <h3>description</h3>
            <textarea name="description" cols="30" rows="10"><%= data.description %></textarea>
            <% if (description !== "undefined") { %>
                <p><%= description  %></p>
            <% } %>
        </div>

        <button type="submit">Submit</button>
    </form>
</body>
</html>